[user]
  name = Pablo Cantero
  email = pablo@pablocantero.com
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[core]
  editor = vim -f
  excludesfile = /Users/pablo/.gitignore
[merge]
	tool = diffmerge
	ff = true
[help]
  format = man
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  b = branch -a
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an, %cr)%Creset' --abbrev-commit --date=relative
[mergetool "diffmerge"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = true
[mergetool]
	keepBackup = false
[diff]
  tool = diffmerge
[difftool "diffmerge"]
  cmd = diffmerge $LOCAL $REMOTE
[branch]
  autosetupmerge = true
[pull]
	rebase = true
[init]
	templatedir = ~/.git_template
[push]
	default = current
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
